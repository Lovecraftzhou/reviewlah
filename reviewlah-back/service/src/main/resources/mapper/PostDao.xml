<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.reviewlah.db.dao.PostDao">
    <select id="selectPostByCustomerId" parameterType="BigInteger" resultType="com.reviewlah.db.pojo.Post">
        select *
        FROM post
        WHERE customer_id = #{customer_id}
        ORDER BY time_post DESC
    </select>
    <select id="selectPostByPostId" parameterType="BigInteger" resultType="com.reviewlah.db.pojo.Post">
        select *
        FROM post
        WHERE post_id = #{post_id}
    </select>
    <select id="selectAllPostExceptMine" parameterType="BigInteger" resultType="com.reviewlah.db.pojo.Post">
        select *
        FROM post
        WHERE customer_id != #{customer_id}
        ORDER BY time_post DESC
    </select>
    <select id="selectRelativePost" resultType="com.reviewlah.db.pojo.Post">
        select *
        FROM post
        WHERE content like concat('%',#{keyword},'%') AND customer_id != #{customer_id}
        ORDER BY time_post DESC
    </select>
    <insert id="insertPost" parameterType="com.reviewlah.db.pojo.Post">
        INSERT INTO post (
        <if test="customer_id!=null">
            customer_id,
        </if>
        <if test="title!=null">
            title,
        </if>
        <if test="content!=null">
            content,
        </if>
        <if test="time_post!=null">
            time_post,
        </if>
        pic_post) values (
        <if test="customer_id!=null">
            #{customer_id},
        </if>
        <if test="title!=null">
            #{title},
        </if>
        <if test="content!=null">
            #{content},
        </if>
        <if test="time_post!=null">
            #{time_post},
        </if>
        #{pic_post}
        )
    </insert>
    <delete id="deletePostByPostId" parameterType="BigInteger">
        DELETE FROM post
        WHERE post_id = #{post_id}
    </delete>
</mapper>