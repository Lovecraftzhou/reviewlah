<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.reviewlah.db.dao.UserDao">
    <insert id = "insertUser" parameterType = "com.reviewlah.db.pojo.User">
        INSERT INTO user (name, phone_number, email, password, type, avator) values (#{name}, #{phone_number}, #{email}, #{password}, #{type}, #{avator})
    </insert>
    <update id = "updateUser" parameterType = "com.reviewlah.db.pojo.User">
        UPDATE user
        SET
            name = #{name},
            password = #{password},
            <if test="phone_number!=null">
                phone_numer = #{phone_number}
            </if>
            <if test="email!=null">
                email = #{email}
            </if>
            <if test="avator!=null">
                avator = #{avator}
            </if>
        where user_id = #{user_id}
    </update>
    <delete id = "deleteUserById" parameterType="BigInteger">
        DELETE FROM user
        where user_id = #{user_id}
    </delete>
    <select id = "selectUserByName" parameterType="String" resultType="com.reviewlah.db.pojo.User">
        SELECT *
        FROM user
        WHERE name = #{name}
    </select>
</mapper>